# Application
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# Database (using Docker port 5434)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5434/education_ai
DATABASE_POOL_SIZE=10

# Redis (using Docker port 6381)
REDIS_URL=redis://localhost:6381/0
CELERY_BROKER_URL=redis://localhost:6381/1

# JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# AI/LLM
CEREBRAS_API_KEY=your-cerebras-api-key
OPENAI_API_KEY=sk-your-openai-key
GOOGLE_API_KEY=your-google-api-key
LLM_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# MinIO/S3 (using Docker ports 9002/9003)
MINIO_ENDPOINT=localhost:9002
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=education-ai
MINIO_SECURE=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Audio (optional)
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
